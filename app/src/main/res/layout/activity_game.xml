<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="4dp" />

    <TextView
        android:id="@+id/country_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="Country Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_name_textview"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Detail to guess"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/choice_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_textview"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_bouton"
        android:text="Choice 1"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/choice_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bouton"
        android:layout_below="@id/choice_button_1"
        android:layout_marginTop="16dp"
        android:text="Choice 2"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/choice_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bouton"
        android:layout_below="@id/choice_button_2"
        android:layout_marginTop="16dp"
        android:text="Choice 3"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/choice_button_4"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_bouton"
        android:layout_height="wrap_content"
        android:layout_below="@id/choice_button_3"
        android:layout_marginTop="16dp"
        android:text="Choice 4"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
